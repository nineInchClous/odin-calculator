{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:jsdoc/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "jsdoc"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
        ],
        "jsdoc/require-description": "warn"
    }
}
